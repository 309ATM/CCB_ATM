<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<!-- 配置连接信息 -->
    <session-factory>
    <!-- 必选配置 -->
    
    
    
    
    
    	<!-- 驱动 -->
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <!-- 连接数据库的名字 -->
        <property name="hibernate.connection.url">jdbc:mysql://172.25.148.15:3306/ccb_atm</property>
        <!-- 连接数据库的账号 -->
        <property name="hibernate.connection.username">atmuser</property>
        <!-- 连接数据库的账号的密码 -->
        <property name="hibernate.connection.password">atmpass</property>
        <!-- 数据库方言 使用数据库的类型 -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <!-- 把session绑定到当前线程 -->
        <property name="hibernate.current_session_context_class">thread</property>
        
        
        <!-- 映射文件 -->
        <!-- admin的映射文件 -->
          <mapping resource="seventh/dbc/admin.hbm.xml"/>
        <!-- account的映射文件 -->
          <mapping resource="seventh/dbc/account.hbm.xml"/>
        <!-- users的映射文件 -->
          <mapping resource="seventh/dbc/users.hbm.xml"/>
        <!-- tradingrec的映射文件 -->
          <mapping resource="seventh/dbc/tradingrec.hbm.xml"/>
      
        
        
    </session-factory>
    
</hibernate-configuration>
